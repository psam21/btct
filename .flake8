[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    .venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401  # imported but unused
    tests/*:S101  # use of assert detected
